<div class="action-divider">
	{% if show_question %}
		<div class="action-divider-question-wrapper">
			<p class="action-divider-question"> {{ cta_question }}</p>
			<div class="wp-block-buttons is-content-justification-center is-layout-flex wp-container-core-buttons-is-layout-2 wp-block-buttons-is-layout-flex">
				<div class="wp-block-button action-divider-question-button-yes"><a class="wp-block-button__link wp-element-button">{{ button_yes_text }}</a></div>
				<div class="wp-block-button action-divider-question-button-no"><a class="wp-block-button__link wp-element-button">{{ button_no_text }}</a></div>
			</div>
		</div>
		<div class="action-divider-step2 action-divider-step2-yes">
			<p class="action-divider-text"><span class="dashicons-before {{ icon }}"></span> {{ text }}</p>
			<div class="wp-block-buttons is-content-justification-center is-layout-flex wp-container-core-buttons-is-layout-1 wp-block-buttons-is-layout-flex">
				<div class="wp-block-button is-style-cta"><a class="wp-block-button__link wp-element-button" href="{{ url }}" target="{{ target }}">{{ title }}</a></div>
			</div>
		</div>
		<div class="action-divider-step2 action-divider-step2-no">
			<div class="action-divider-text">{{ no_text| raw }}</div>
			<div class="action-divider-feedback-form">
				{{ no_form|raw }}
			</div>
		</div>
	{% else %}
		<p class="action-divider-text"><span class="dashicons-before {{ icon }}"></span> {{ text }}</p>
		<div class="wp-block-buttons is-content-justification-center is-layout-flex wp-container-core-buttons-is-layout-1 wp-block-buttons-is-layout-flex">
			<div class="wp-block-button is-style-cta"><a class="wp-block-button__link wp-element-button" href="{{ url }}" target="{{ target }}">{{ title }}</a></div>
		</div>
	{% endif %}
</div>
